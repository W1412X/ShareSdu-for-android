<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffffff"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:background="#ccffffff">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccffffff">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_choose_username_button"
                            android:background="@drawable/main_color_ripple_button"
                            android:text="用户名登陆"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/start_login_page_choose_username_linear"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#ffffff"
                        android:layout_width="2px"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_choose_email_button"
                            android:background="#9c0c13"
                            android:text="邮箱登陆"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/start_login_page_choose_email_linear"
                            android:background="@color/mainColor"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/start_login_page_username_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/start_login_page_username_input"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="45dp"
                        android:hint="用户名"
                        android:textSize="20sp"
                        android:padding="15dp"
                        android:textCursorDrawable="@drawable/cursor_drawable_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#338a8a8a">
                    </EditText>
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/start_login_page_login_passwd_input"
                            android:hint="密码"
                            android:textSize="20sp"
                            android:textCursorDrawable="@drawable/cursor_drawable_red"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#338a8a8a">
                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_username_login_button"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:text="用户名登陆"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/main_color_ripple_button"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/start_login_page_email_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/start_login_page_login_email_input"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="45dp"
                        android:textCursorDrawable="@drawable/cursor_drawable_red"
                        android:hint="您的校园邮箱"
                        android:textSize="20sp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#338a8a8a">
                    </EditText>
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/start_login_page_login_code_input"
                            android:hint="验证码"
                            android:textSize="20sp"
                            android:padding="15dp"
                            android:textCursorDrawable="@drawable/cursor_drawable_red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="#338a8a8a">
                        </EditText>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_login_get_code_button"
                            android:layout_width="match_parent"
                            android:text="获取验证码"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_weight="100"
                            android:background="@drawable/main_color_ripple_button"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/start_login_page_email_login_button"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:text="邮箱登陆"
                            android:layout_marginBottom="10dp"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/main_color_ripple_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_login_page_to_register_page_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="0px"
                android:text="         没有帐号？立即注册>>"
                android:textStyle="bold"
                android:textColor="#ee3654d5"
                android:layout_marginRight="40dp"
                android:textSize="16sp">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/start_login_page_register_view"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/mainColor"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/start_login_page_return_login_button"
                    android:layout_width="30dp"
                    android:text="〈"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="#00000000"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_login_page_register_username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="设置用户名"
                    android:textCursorDrawable="@drawable/cursor_drawable_red"
                    android:background="#00000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#8a8a8a"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_register_page_passwd_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_drawable_red"
                    android:hint="设置登陆密码"
                    android:background="#00000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#8a8a8a"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_login_page_register_passwd_twice_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="再次输入登陆密码"
                    android:background="#00000000"
                    android:textCursorDrawable="@drawable/cursor_drawable_red"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#8a8a8a"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_login_page_register_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入你的校园邮箱"
                    android:textCursorDrawable="@drawable/cursor_drawable_red"
                    android:background="#00000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#8a8a8a"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_login_page_register_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入验证码"
                    android:textCursorDrawable="@drawable/cursor_drawable_red"
                    android:layout_weight="75"
                    android:background="#00000000"
                    android:padding="10dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/start_login_page_register_get_code_button"
                    android:layout_width="match_parent"
                    android:background="@drawable/main_color_ripple_button"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_weight="100"
                    android:padding="0dp"
                    android:layout_height="40dp">
                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#8a8a8a"/>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/start_register_page_agree_button"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意《用户注册协议》"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/start_register_page_register_button"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:background="@drawable/main_color_ripple_button"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>