<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:padding="10dp"
                    android:background="#ddffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/course_page_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="这是课程标题"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/course_page_college_text"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8a8a8a"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:text="开设学院:计算机科学与技术学院"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/course_page_type_text"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8a8a8a"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:text="课程类型:通识选修，人文社科"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/course_page_method_text"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8a8a8a"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="2"
                            android:text="教学方式:线上"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/course_page_teacher_text"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8a8a8a"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:text="授课教师:某某某"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/course_page_campus_text"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8a8a8a"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:text="开设校区:青岛校区"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:minWidth="120dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/course_page_score_text"
                                android:gravity="center"
                                android:text="4.5/5"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/mainColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <RatingBar
                                android:id="@+id/course_page_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:progressTint="@color/mainColor"
                                android:backgroundTint="#8a8a8a"
                                style="?android:attr/ratingBarStyleSmall"
                                android:rating="4.5"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.github.mikephil.charting.charts.HorizontalBarChart
                                android:id="@+id/course_page_chart"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            =<LinearLayout
            android:id="@+id/course_page_comment_container"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>